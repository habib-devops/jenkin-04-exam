pipeline {
    agent any

    parameters {
        string(name: 'BUILD_VERSION', description: 'Docker image tag version')
    }

    environment {
        // Use Jenkins Credentials Binding for Docker Hub (set these in Jenkins > Credentials)
        DOCKER_CREDENTIALS = credentials('docker-hub-credentials') // This is the ID of your DockerHub credentials
        DOCKER_IMAGE = 'your-dockerhub-username/demo-app' // Replace with your actual repo
        GIT_REPO = 'https://github.com/your-username/demo-repo.git' // Replace with your repo
    }

    stages {
        stage('Print Build Info') {
            steps {
                echo "BUILD_VERSION: ${params.BUILD_VERSION}"
                echo "Using Docker Image Tag: ${DOCKER_IMAGE}:${params.BUILD_VERSION}"
            }
        }

        stage('Checkout Code') {
            steps {
                git url: "${env.GIT_REPO}", branch: 'main'
            }
        }

        stage('Docker Build') {
            steps {
                script {
                    sh "docker build -t ${DOCKER_IMAGE}:${params.BUILD_VERSION} ."
                }
            }
        }

        stage('Docker Login & Push') {
            steps {
                script {
                    echo "Logging into Docker Hub..."
                    sh "echo ${DOCKER_CREDENTIALS_PSW} | docker login -u ${DOCKER_CREDENTIALS_USR} --password-stdin"

                    echo "Pushing Docker Image..."
                    sh "docker push ${DOCKER_IMAGE}:${params.BUILD_VERSION}"
                }
            }
        }
    }

    post {
        success {
            echo "Pipeline completed successfully!"
        }
        failure {
            echo "Pipeline failed."
        }
    }
}
